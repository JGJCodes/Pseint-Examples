Proceso Rectangulo_Perimetro_Area
	Base<-0;
	Altura<-0;
	Perimetro<-0;
	Area<-0;
	
	Escribir "Ingresar valor de la base";
	Leer Base;
	Escribir "Ingresar valor de la altura";
	Leer Altura;
	Perimetro<-(2*Base)+(2*Altura);
	Area<-Base*Altura;
	Escribir "El perimetro del rectangulo es", Perimetro; 
	Escribir "El area del rectangulo es", Area;
	
FinProceso
